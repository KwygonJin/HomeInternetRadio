<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/status_iv_radiologo"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_weight="3"
        app:srcCompat="@mipmap/ic_launcher"
        android:contentDescription="@string/desc_image_of_radiostation" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/status_tv_radioname"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:textColor="@color/cardview_dark_background"
            android:textSize="32sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/status_btn_prev"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:contentDescription="@string/desc_preious_radio_station"
                app:srcCompat="@android:drawable/ic_media_previous" />

            <ImageButton
                android:id="@+id/status_btn_pausestop"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_media_play"
                android:contentDescription="@string/desc_play_pause_radio_station" />

            <ImageButton
                android:id="@+id/status_btn_next"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_media_next"
                android:contentDescription="@string/desc_next_radio_station" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>